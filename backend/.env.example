# Server Configuration
NODE_ENV=development
PORT=7001
API_PREFIX=/api

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=calendar

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
ACCESS_TOKEN_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://www.seefu.cn,https://seefu.cn,http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,POST,DELETE,PATCH,OPTIONS
CORS_MAX_AGE=86400

# Log Configuration
LOG_DIR=logs
LOG_LEVEL=DEBUG
LOG_FILE_NAME=calendar-server-web.log

# Security Configuration
COOKIE_SIGN_KEY=your_cookie_sign_key_here
ENABLE_CSRF=false

# App Configuration
APP_NAME=calendar-server
APP_VERSION=1.0.0

# Comment out configurations you don't need in production
# DEBUG_MODE=true
# ENABLE_SWAGGER=true
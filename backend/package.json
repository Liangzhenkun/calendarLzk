{
  "name": "calendar-server",
  "version": "1.0.0",
  "description": "日历日记服务端",
  "private": true,
  "egg": {
    "declarations": true
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development egg-bin dev --port=7001",
    "start": "egg-scripts start --title=calendar-server",
    "stop": "egg-scripts stop --title=calendar-server",
    "debug": "cross-env NODE_ENV=test egg-bin debug",
    "test": "cross-env NODE_ENV=test egg-bin test",
    "cov": "cross-env NODE_ENV=test egg-bin cov",
    "start:prod": "cross-env NODE_ENV=production egg-scripts start --title=calendar-server --daemon",
    "start:dev": "cross-env NODE_ENV=development egg-bin dev --port=7001"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "egg": "^3.17.0",
    "egg-cors": "^2.2.3",
    "egg-jwt": "^3.1.7",
    "egg-mysql": "^4.0.0",
    "egg-scripts": "^2.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "egg-bin": "^5.10.0",
    "egg-mock": "^5.10.0"
  }
}
